{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "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",
    "OPENAI_MODEL": "gpt-4o-mini",
    "EMBEDDING_MODEL": "all-MiniLM-L6-v2"
  }
}
